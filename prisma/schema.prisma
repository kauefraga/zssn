generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survivor {
  id         String   @id @default(cuid())
  name       String   @unique
  age        Int
  gender     String
  location   Location @relation(fields: [locationId], references: [id])
  locationId Int
}

model Location {
  id       Int        @id @default(autoincrement())
  name     String?    @unique
  lat      Int
  lon      Int
  Survivor Survivor[]
}
